generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum TournamentStatus {
  OPEN
  LIVE
  FINISHED
}

enum TransactionType {
  DEPOSIT
  WITHDRAW
  ENTRY_FEE
  REWARD
  TRANSFER
  PURCHASE
  SUBSCRIPTION
}

enum TransactionStatus {
  PENDING
  COMPLETED
  REJECTED
}

enum QuestType {
  DAILY
  WEEKLY
}

enum SubscriptionTier {
  NONE
  WEEKLY
  MONTHLY
  THREE_MONTH
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                String            @id @default(cuid())
  name              String?
  email             String?           @unique
  emailVerified     DateTime?
  password          String?
  image             String?
  role              Role              @default(USER)
  walletBalance     Float             @default(0)
  xp                Int               @default(0)
  level             Int               @default(1)
  rankId            String?           @default("Unranked")
  subscriptionTier  SubscriptionTier  @default(NONE)
  
  accounts          Account[]
  sessions          Session[]
  
  teamId            String?
  team              Team?             @relation(fields: [teamId], references: [id])
  
  userSubscriptions UserSubscription[]
  transactions      Transaction[]
  gameAccounts      GameAccount[]
  chatMessages      ChatMessage[]
  
  userQuests        UserQuest[]
  
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
}

model Team {
  id          String   @id @default(cuid())
  name        String   @unique
  logo        String?
  captainId   String
  members     User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Game {
  id          String       @id @default(cuid())
  name        String       @unique
  slug        String       @unique
  image       String
  tournaments Tournament[]
  quests      Quest[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Tournament {
  id              String           @id @default(cuid())
  title           String
  gameId          String
  game            Game             @relation(fields: [gameId], references: [id])
  entryFee        Float
  prizePool       Float
  startDate       DateTime
  status          TournamentStatus @default(OPEN)
  winnerId        String?
  maxParticipants Int              @default(32)
  isOfficial      Boolean          @default(true)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model Subscription {
  id              String             @id @default(cuid())
  name            SubscriptionTier   @unique
  price           Float
  features        Json
  durationDays    Int
  userAssignments UserSubscription[]
}

model UserSubscription {
  id              String       @id @default(cuid())
  userId          String
  user            User         @relation(fields: [userId], references: [id])
  subscriptionId  String
  subscription    Subscription @relation(fields: [subscriptionId], references: [id])
  startDate       DateTime     @default(now())
  endDate         DateTime
  freeEntriesLeft Int          @default(0)
  createdAt       DateTime     @default(now())
}

model Transaction {
  id          String            @id @default(cuid())
  userId      String
  user        User              @relation(fields: [userId], references: [id])
  amount      Float
  type        TransactionType
  status      TransactionStatus @default(PENDING)
  iban        String?
  fullName    String?
  targetEmail String?           // For user-to-user transfer
  createdAt   DateTime          @default(now())
}

model GameAccount {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  gameId      String
  accountName String
  rank        String?
  stats       Json?
  createdAt   DateTime @default(now())
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  image       String
  category    String
  stock       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ChatMessage {
  id        String   @id @default(cuid())
  roomId    String   @default("global")
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  content   String
  createdAt DateTime @default(now())
}

model Quest {
  id            String      @id @default(cuid())
  title         String
  description   String
  type          QuestType   @default(DAILY)
  rewardAmount  Float
  rewardXp      Int         @default(100)
  gameId        String
  game          Game        @relation(fields: [gameId], references: [id])
  isActive      Boolean     @default(true)
  userQuests    UserQuest[]
  createdAt     DateTime    @default(now())
}

model UserQuest {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  questId     String
  quest       Quest    @relation(fields: [questId], references: [id])
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  completedAt DateTime?
}
